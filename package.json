{
  "name": "phprange",
  "version": "1.0.0",
  "description": "Inclusive and exclusive Range-Functions with min,max and stepsize like the one in PHP",
  "files": [
    "lib/phprange.js",
    "lib/phprange.js.map",
    "lib/phprange.d.ts"
  ],
  "types": "lib/phprange.d.ts",
  "main": "lib/phprange.js",
  "scripts": {
    "build": "tsc",
    "test": "jest --config jestconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "git add -A",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "range",
    "step",
    "stepsize",
    "min",
    "max"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://webgit.de/lib/phprange-js.git"
  },
  "author": "Michael Reinhardt",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^28.1.7",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.8",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.4"
  }
}
